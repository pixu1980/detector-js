{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ESNext",
    "jsx": "react",
    "checkJs": true,
    "allowJs": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "resolveJsonModule": true,
    "lib": ["DOM", "ESNext", "ESNext.Symbol", "ESNext.Intl"]
  },
  "exclude": ["node_modules", "**/node_modules/*"]
}
